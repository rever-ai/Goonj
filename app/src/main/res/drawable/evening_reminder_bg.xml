<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/evening_reminder_press" android:state_checked="true" />

    <item android:drawable="@drawable/evening_reminder_unpress" android:state_checked="false" />
    <!--  Non focused states
      -->
    <item android:drawable="@drawable/evening_reminder_unpress" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/evening_reminder_unpress" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />
    <!--  Focused states
     -->
    <item android:drawable="@drawable/evening_reminder_press" android:state_focused="true" android:state_pressed="false" android:state_selected="false" />
    <item android:drawable="@drawable/evening_reminder_press" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />
    <!--  Pressed
     -->
    <item android:drawable="@drawable/evening_reminder_press" android:state_pressed="true" />
</selector>